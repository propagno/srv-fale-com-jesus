# Dockerfile para desenvolvimento local
FROM eclipse-temurin:17-jdk-jammy

WORKDIR /app

# Instala dependências do sistema
RUN apt-get update && \
    apt-get install -y curl maven && \
    rm -rf /var/lib/apt/lists/*

# Copia arquivos do projeto
COPY . .

# Expõe porta
EXPOSE 8080

# Comando para desenvolvimento
# Tenta usar mvnw, se não existir usa maven do sistema
CMD if [ -f "./mvnw" ]; then ./mvnw spring-boot:run; else mvn spring-boot:run; fi

